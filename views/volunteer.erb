<div class="w3-padding-large" id="main">
  <!-- Header/Home -->
  <header class="w3-container w3-padding-32 w3-center w3-black" id="home">
    <h1 class="w3-jumbo"><u><span class="w3-hide-small">Difference&darr;&darr;Maker</span></u> &nbsp; &nbsp; &nbsp; &nbsp;</h1>
    <h2><%= @volunteer.name %></h2>
    <p></p>
  </header>

  <div class="w3-row w3-center w3-padding-16 w3-section w3-light-grey">
        <div class="w3-center w3-section">
          <span class="w3-xlarge"><a href="/projects/<%= @project.id %>">Current Project: <%= @project.title %></a></span><br>
          <%= @project.details %>
        </div>
      </div>


  <form action="/volunteers/<%= @volunteer.id %>" method="post">
    <p>Change Project <select name="project_id">
      <% @project_list.each do |project| %>
        <option value="<%= project.id %>"><%= project.title %></option>
      <% end %>
    </select>
    <button class="w3-button w3-light-grey w3-padding-large" type="submit">
      <i class="far fa-hand-peace"></i> &nbsp;&nbsp;Re-Assign
    </button>
    </p>
  </form>


</div>
