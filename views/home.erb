<div class="w3-padding-large" id="main">
  <!-- Header/Home -->
  <header class="w3-container w3-padding-32 w3-center w3-black" id="home">
    <h1 class="w3-jumbo"><u><span class="w3-hide-small">Change Starts Here</span></u></h1>
    <h2>Add a project below</h2>
    <p></p>
  </header>



    <form action="/projects" method="post">
      <p><input class="w3-input w3-padding-16" type="text" placeholder="Project Title" required name="title"></p>
      <p><input class="w3-input w3-padding-16" type="text" placeholder="Project Details" required name="details"></p>
        <button class="w3-button w3-light-grey w3-padding-large" type="submit">
          <i class="far fa-hand-peace"></i> &nbsp;&nbsp;CHANGE LIVES
        </button>
      </p>
    </form>

    <header class="w3-container w3-padding-32 w3-center w3-black" id="home">
      <h2 class="w3-jumbo"><u>Current Projects</u></h2>
      <p></p>
    </header>
      <% @project_list.each() do |project| %>
      <div class="w3-row w3-center w3-padding-16 w3-section w3-light-grey">
            <div class="w3-center w3-section">
              <span class="w3-xlarge"><a href="projects/<%= project.id %>"><%= project.title %></a></span><br>
              <%= project.details %>
            </div>
          </div>
      <% end %>

  <!-- End Contact Section -->
  </div>
